<%= render partial: 'navbar' %>


<div class="item-container-my">
  <div class="user-container">
    <% @users.each do |user| %>
    <div class="card mb-3">
      <div class="card-body">

        <%= link_to user do %>
          <h4 class="card-title"><%= user.name %></h4>
        <% end %>


        <p class="card-text">Age: <%= user.age %></p>
        <p class="card-text">Phon: <%= user.phone_number %></p>
        <p class="card-text">City:  <%= user.city.name %></p>
        <p class="card-text"><small class="text-muted">Acc create at <%= user.created_at.strftime("%d-%m-%Y")%></small></p>
      </div>
    </div>
    <% end %>
  </div>

 <div class="sort-conteiner">

    <%= render partial: 'sort' %>

 </div>

 </div>

 <%= paginate @users %>
 <%= link_to "Create new user", new_user_path%>
