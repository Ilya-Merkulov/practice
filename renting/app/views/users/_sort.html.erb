<div class="card-body">

  <h3> Sort: </h3>

  <ul>
      <li><%=  link_to "All", users_path %></li>
      <% @cities.each do |city| %>
          <li class="<%= 'active' if params[:city] == city.name %>">
            <%= link_to city.name, users_path(city: city.name), class: "link" %>
          </li>
          <% end %>

  </ul>

</div>
