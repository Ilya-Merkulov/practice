<%= render partial: 'navbar' %>




<div class="item-container-my">
  <div class="item-container">
    <% @items.each do |item| %>
    <div class="card mb-3">

      <div>
        <%= image_tag("250.jpg", :alt => "rss feed") %>
      </div>


      <div class="card-body">
          <div class="dis-f">
              <%= link_to item do %>
                <h4 class="card-title"><%= item.title %></h4>
              <% end %>
            <h4 class="card-title text-right"><%= item.user.name%></h4>
          </div>
        <p class="card-text"><%= item.text %></p>
        <p class="card-text">Size: <%= item.size %></p>
        <p class="card-text">City: <%= item.user.city.name%></p>
        <p class="card-text"><small class="text-muted"><%= item.created_at.strftime("%d-%m-%Y")%></small></p>
      </div>
    </div>
    <% end %>
  </div>

<div class="sort-conteine">

  <div class="card-body">

    <h3> Sort: </h3>

    <ul>
        <li><%=  link_to "All", items_path %></li>
        <% @cities.each do |city| %>
            <li class="<%= 'active' if params[:city] == city.name %>">
              <%= link_to city.name, items_path(city: city.name), class: "link" %>
            </li>
            <% end %>

    </ul>

  </div>

</div>




</div>

<%= paginate @items %>
<%= link_to "Create new item", new_item_path%>
